@model RentC.WebUI.Models.DAL.User

@{
    ViewBag.Title = "Home";
    var status = Html.Raw((Model.Enabled) ? "<span class=\"dot-green\"></span>" : "<span class=\"dot-red\"></span>");
}

<h2>Home</h2>

<div>
    <h4>User</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Role
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Role.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Password)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Password)
        </dd>

        <dt>
            Status
        </dt>

        <dd>
            @status
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Change password", "Alter", new { id = Model.UserID }) |
</p>
